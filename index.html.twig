{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                {{ form(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                {% if(dataReport) %}
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Date</td>
                                <td>Successfully sent</td>
                                <td>Failed</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for report in dataReport %}
                                <tr>
                                    <td>{{ report.logAggDate }}</td>
                                    <td>{{ report.logAggCountSentSuccess }}</td>
                                    <td>{{ report.logAggCountSentFail }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <h2>No Data</h2>
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}